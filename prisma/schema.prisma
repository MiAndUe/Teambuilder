// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DB_URL")
}

model User {
  netid         @id @default(autoincrement())
  user_role     String @default("epics")
  email         String  @unique
  name          String  @default("")
  //posts Post[]

}

model Projects{
  title        String @default("")
  major        String @default("")
  content      String @default("")
  partner      String @default("")
  partnerInfo  String @default("")
}

model Student {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String   @unique
  team      Team?    // This establishes a relation between Student and Team
}

// Define the schema for the Teams model
model Team {
  id       Int       @id @default(autoincrement())
  name     String
  students Student[] // This establishes a relation between Team and Student
}